#!/usr/bin/env bash
# Configure Nginx so that its HTTP response contains
# a custom header
# Add HAProxy PPA
sudo apt-get install --no-install-recommends software-properties-common
add-apt-repository ppa:vbernat/haproxy-2.7
sudo apt-get -y update
# Install HAProxy
apt-get install haproxy=2.7.\*
sudo sed -i -e '$aENABLED=1\n' /etc/default/haproxy
sudo sed -i -e '$a\listen 71900-lb-01\n\tbind 0:80\n\tmode http\n\tstats enable\n\tbalance roundrobin\n\toption httpclose\n\toption forwardfor\n\tserver 71900-web-01 100.26.136.152:80 check\n\tserver 71900-web-02 52.91.125.23:80 check\n' /etc/haproxy/haproxy.cfg
sudo service haproxy restart
